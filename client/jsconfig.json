{
	"compilerOptions": {
		"outDir": "./build",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		//		"sourceMap": true,
		//		"sourceMap": false,
		//		"declarations": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"skipLibCheck": true,
		"include": ["src/**/*"],
		"exclude": ["node_modules"],
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@images/*": ["src/assets/images/*"],
			"@store/*": ["src/store/*"],
			"@Styles/*": ["src/Styles/*"]
		},
		"lib": ["es6", "dom"]
	}
}
